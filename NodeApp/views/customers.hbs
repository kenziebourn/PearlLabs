{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table id="customers-table" border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- Display each column name in human readable format --}}
        <caption>Information for all customers</caption>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zipcode</th>
            <th>Phone Number</th>
            <th>Email</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the customerID, firstName, lastName, streetAddress, city ,state, zipcode, phoneNumber and email in order --}}
        {{#each data}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.streetAddress}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zipcode}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.email}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a Customer to the table using standard HTML forms --}}
<h2>Add a Customer</h2>
<p>To add a new Customer, please enter their information below and click `Submit`!</p>
<form id="add-customer-form" method="POST" action="/add-customer-form">
    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname">
    <br>
    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname">
    <br>
    <label for="input-streetAddress">Street Address: </label>
    <input type="text" name="input-streetAddress" id="input-streetAddress">
    <br>
    <label for="input-city">City: </label>
    <input type="text" name="input-city" id="input-city">
    <br>
    <label for="input-state">State: </label>
    <input type="text" name="input-state" id="input-state">
    <br>
    <label for="input-zipcode">Zipcode: </label>
    <input type="number" name="input-zipcode" id="input-zipcode">
    <br>
    <label for="input-phoneNumber">Phone Number: </label>
    <input type="text" name="input-phoneNumber" id="input-phoneNumber">
    <br>
    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">
    <br>
    <input type="submit">
</form> 

{{!-- Search for a Customer by ID using HTML Form--}}
<h2>Search a Customer</h2>
<p>To search for a customer, please enter their customer ID</p>
<form id="search-customer-html" method='GET' action='/search-customer-html'>
    <label for="input-customerID">Search by ID: </label>
    <input type="text" name="input-customerID" id="input-customerID-html-search">
    
